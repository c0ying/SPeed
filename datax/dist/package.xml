<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>all</id>
    <formats>
        <format>tar.gz</format>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    
    <fileSets>
        <fileSet>
            <directory>../transformer/target/datax-transformer/</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
            <outputDirectory>SPeed</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../core/target/datax-core/</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
            <outputDirectory>SPeed</outputDirectory>
        </fileSet>
		<fileSet>
            <directory>../datax-enhance/target/datax-enhance</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
            <outputDirectory>SPeed</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
